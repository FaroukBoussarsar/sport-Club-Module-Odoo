<odoo>
    <data>
        <!-- explicit list view definition -->
        <!-- list student -->
        <record model="ir.ui.view" id="player_list_view">
            <field name="name">player list</field>
            <field name="model">sportclub.player</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="f_name"/>
                    <field name="l_name"/>
                    <field name="gender"/>
                    <field name="birthday"/>
                     <field name="address"/>
                    <field name="email"/>
                     <field name="phone"/>
                </tree>
            </field>
        </record>


        <!-- student form -->
        <record model="ir.ui.view" id="student_form_view">
            <field name="name">player Form</field>
            <field name="model">sportclub.player</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="f_name"/>
                    <field name="l_name"/>
                    <field name="gender"/>
                    <field name="birthday"/>
                     <field name="address"/>
                    <field name="email"/>
                     <field name="phone"/>
                        <field name="identity_card"/>
                    </group>

                </form>
            </field>
        </record>


        <!-- actions opening views on models -->
        <!-- student action -->

        <record model="ir.actions.act_window" id="player_action_window">
            <field name="name">player window</field>
            <field name="res_model">sportclub.player</field>
            <field name="view_mode">tree,form</field>
        </record>

