<odoo>
    <data>
        <!-- explicit list view definition -->
        <!-- list student -->
        <record model="ir.ui.view" id="owner_list_view">
            <field name="name">Owner list</field>
            <field name="model">sportclub.owner</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="f_name"/>
                    <field name="l_name"/>
                    <field name="gender"/>
                    <field name="birthday"/>
                     <field name="address"/>
                    <field name="email"/>
                     <field name="phone"/>
                </tree>
            </field>
        </record>


        <!-- student form -->
        <record model="ir.ui.view" id="student_form_view">
            <field name="name">owner Form</field>
            <field name="model">sportclub.owner</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="f_name"/>
                    <field name="l_name"/>
                    <field name="gender"/>
                    <field name="birthday"/>
                     <field name="address"/>
                    <field name="email"/>
                     <field name="phone"/>
                    </group>
                      <notebook>
                        <page string="liste of sportclubs">
                            <field name="sportclub_ids"/>
                        </page>
                    </notebook>

                </form>
            </field>
        </record>


        <!-- actions opening views on models -->
        <!-- student action -->

        <record model="ir.actions.act_window" id="owner_action_window">
            <field name="name">owner window</field>
            <field name="res_model">sportclub.owner</field>
            <field name="view_mode">tree,form</field>
        </record>

